                "parameters": [
                    {
                        "name": "document",
                        "in": "path",
                        "description": "Número do documento do usuário a ser atualizado",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados para atualizar o usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado com sucesso"
                    },
                    "400": {
                        "description": "Erro nos dados da solicitação"
                    }
                }
            }
        }
