{
    "openapi": "3.1.0",
    "info": {
        "title": "Documentação",
        "description": "Documentação do projeto Orçametro",
        "version": "1.0.0"
    },
    "paths": {
        "/api/users/create": {
            "post": {
                "summary": "Criar um usuário",
                "tags": ["Usuários"],
                "requestBody": {
                    "description": "Dados para criar um usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "number"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "document": {
                                        "type": "string"
                                    },
                                    "postal_code": {
                                        "type": "string"
                                    },
                                    "phone": {
                                        "type": "string"
                                    },
                                    "street_number": {
                                        "type": "number"
                                    },
                                    "is_company": {
                                        "type": "boolean"
                                    },
                                    "deleted": {
                                        "type": "boolean"
                                    },
                                    "created_at": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "updated_at": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "token": {
                                        "type": "string"
                                    }
                                },
                                "required": ["name", "email", "password", "document"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso"
                    },
                    "400": {
                        "description": "Erro nos dados da solicitação"
                    }
                }
            }
        },          
        "/api/users/list-all": {
            "get": {
                "summary": "Listar todos os usuários",
                "tags": ["Usuários"],
                "responses": {
                    "200": {
                        "description": "Lista de usuários retornada com sucesso"
                    }
                }
            }
        },
        "/api/users/list-one/{document}": {
            "get": {
                "summary": "Buscar um usuário por documento",
                "tags": ["Usuários"],
                "parameters": [
                    {
                        "name": "document",
                        "in": "path",
                        "description": "Número do documento do usuário",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuário encontrado"
                    },
                    "404": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        },
        "/api/users/delete/{document}": {
            "delete": {
                "summary": "Excluir um usuário por documento",
                "tags": ["Usuários"],
                "parameters": [
                    {
                        "name": "document",
                        "in": "path",
                        "description": "Número do documento do usuário a ser excluído",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuário excluído com sucesso"
                    },
                    "404": {
                        "description": "Usuário não encontrado"
                    }
                }
            }
        },
        "/api/users/update/{document}": {
            "put": {
                "summary": "Atualizar um usuário por documento",
                "tags": ["Usuários"],
                "parameters": [
                    {
                        "name": "document",
                        "in": "path",
                        "description": "Número do documento do usuário a ser atualizado",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Dados para atualizar o usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "document": {
                                        "type": "string"
                                    },
                                    "postal_code": {
                                        "type": "string"
                                    },
                                    "phone": {
                                        "type": "string"
                                    },
                                    "street_number": {
                                        "type": "number"
                                    },
                                    "deleted": {
                                        "type": "boolean"
                                    }
                                },
                                "required": ["name", "email", "password", "document"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário atualizado com sucesso"
                    },
                    "400": {
                        "description": "Erro nos dados da solicitação"
                    }
                }
            }
        },
        "/api/products/create": {
            "post": {
              "summary": "Criar um produto",
              "tags": ["Produtos"],
              "requestBody": {
                "description": "Dados para criar um produto (created_by precisa ser igual a um ID de Users)",
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "code": {
                          "type": "string"
                        },
                        "product_name": {
                          "type": "string"
                        },
                        "value": {
                          "type": "number"
                        },
                        "unit_of_measurement": {
                          "type": "string"
                        },
                        "category": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "updated_at": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "deleted": {
                          "type": "boolean"
                        },
                        "created_by": {
                          "type": "number"
                        }
                      },
                      "required": ["code", "product_name", "value", "unit_of_measurement", "category"]
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Produto criado com sucesso"
                },
                "400": {
                  "description": "Erro nos dados da solicitação"
                }
              }
            }
        },
        "/api/products/list-all": {
            "get": {
                "summary": "Listar todos os produtos",
                "tags": ["Produtos"],
                "responses": {
                    "200": {
                        "description": "Lista de produtos retornada com sucesso"
                    }
                }
            }
        }                  
    }
}
